# Full-featured Backend Dockerfile with TTS support
# For servers with 1GB+ RAM
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copy requirements first for layer caching
COPY requirements.txt .

# Install Python dependencies including onnxruntime for TTS
RUN pip install --no-cache-dir \
    flask \
    numpy \
    python-dotenv \
    requests \
    scipy \
    werkzeug \
    onnxruntime \
    && rm -rf ~/.cache/pip

# Copy application code
COPY src/ ./src/

# Copy supertonic TTS assets
COPY supertonic/assets/ ./supertonic/assets/

# Create directories
RUN mkdir -p src/web/static/audio data

# Expose port
EXPOSE 5000

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV FLASK_ENV=production
ENV OLLAMA_HOST=http://host.docker.internal:11434

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:5000/health || exit 1

# Run the application
CMD ["python", "-u", "src/web/app.py"]
